<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009" minWidth="21" minHeight="21" xmlns:mx="library://ns.adobe.com/flex/mx">

    <fx:Metadata>
    <![CDATA[
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>

    <fx:Script fb:purpose="styling">

        override protected function initializationComplete() : void
        {
            useChromeColor = true;
            super.initializationComplete();
        }
    </fx:Script>

    <s:states>
        <mx:State name="up"/>
        <mx:State name="over"/>
        <mx:State name="down"/>
        <mx:State name="disabled"/>
    </s:states>

    <!-- layer 1: shadow -->
    <s:Rect id="shadow" left="-1" right="-1" top="-1" bottom="-1" radiusX="2">
        <s:fill>
            <mx:LinearGradient rotation="90">
                <mx:GradientEntry color="0x000000"
                                 color.down="0xFFFFFF"
                                 alpha="0.01"
                                 alpha.down="0"/>
                <mx:GradientEntry color="0x000000"
                                 color.down="0xFFFFFF"
                                 alpha="0.07"
                                 alpha.down="0.5"/>
            </mx:LinearGradient>
        </s:fill>
    </s:Rect>

    <!-- layer 2: fill -->
    <s:Rect id="fill" left="1" right="1" top="1" bottom="1" radiusX="2">
        <s:fill>
            <mx:LinearGradient rotation="90">
                <mx:GradientEntry color="0x262626"
                                 color.over="0x283A41"
                                 color.down="0x0E2D38"
                                 alpha="0.95"/>
            </mx:LinearGradient>
        </s:fill>
    </s:Rect>

    <!-- layer 7: border - put on top of the fill so it doesn't disappear when scale is less than 1 -->
    <s:Rect id="border" left="0" right="0" top="0" bottom="0" width="69" height="20" radiusX="2">
        <s:stroke>
            <mx:LinearGradientStroke rotation="90" weight="1">
                <mx:GradientEntry color="0x000000"
                                 alpha="0.5625"
                                 alpha.down="0.6375"/>
                <mx:GradientEntry color="0x000000"
                                 alpha="0.75"
                                 alpha.down="0.85"/>
            </mx:LinearGradientStroke>
        </s:stroke>
    </s:Rect>

    <!-- layer 8: arrow -->
    <s:Path right="6" verticalCenter="0" id="arrow"
            data="M 4.0 4.0 L 4.0 3.0 L 5.0 3.0 L 5.0 2.0 L 6.0 2.0 L 6.0 1.0 L 7.0 1.0 L 7.0 0.0 L 0.0 0.0 L 0.0 1.0 L 1.0 1.0 L 1.0 2.0 L 2.0 2.0 L 2.0 3.0 L 3.0 3.0 L 3.0 4.0 L 4.0 4.0">
        <s:fill>
            <mx:RadialGradient rotation="90" focalPointRatio="1">
                <mx:GradientEntry id="arrowFill1" color="0xDADADA" alpha="0.6"/>
                <mx:GradientEntry id="arrowFill2" color="0xDADADA" alpha="0.8"/>
            </mx:RadialGradient>
        </s:fill>
    </s:Path>
</s:SparkSkin>
